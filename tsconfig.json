{
	"compilerOptions": {
		"lib": ["es2015", "dom"],
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"tsx": "react",
		"declaration": false,
		"pretty": true
	},
	"include": ["./index.d.ts", "./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
